<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ntu.lottery.mapper.ActivityWeightPrizeMapper">

    <select id="selectByRuleId" resultType="com.ntu.lottery.entity.ActivityWeightPrize">
        SELECT id,
               rule_id AS ruleId,
               prize_id AS prizeId,
               weight
        FROM activity_weight_prize
        WHERE rule_id = #{ruleId}
    </select>

</mapper>
