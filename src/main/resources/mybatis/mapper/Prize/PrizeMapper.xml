<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ntu.lottery.mapper.PrizeMapper">

    <select id="selectAll" resultType="map">
        SELECT * FROM prize
    </select>

    <select id="selectByActivityId" resultType="map">
        SELECT * FROM prize WHERE activity_id = #{activityId}
    </select>

    <select id="selectById" resultType="map">
        SELECT * FROM prize WHERE id = #{id}
    </select>

    <!-- 扣库存：带 guard，防止扣成负数 -->
    <update id="deductStock">
        UPDATE prize SET stock = stock - 1 WHERE id = #{id} AND stock > 0
    </update>

    <!-- 部分字段更新 -->
    <update id="updatePrizeDynamic">
        UPDATE prize
        <set>
            <if test="stock != null">stock = #{stock},</if>
            <if test="probability != null">probability = #{probability},</if>
            <if test="pointCost != null">point_cost = #{pointCost},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
